generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?
  password String
  blogs    Blog []
}


/*
  while querying , we can access user model using prima.user 

  Why user (lowercase) and not User ???
  Reason -----> 
  Prisma uses a naming convention:
  The model name is User (PascalCase)
  The generated client accessor is user (camelCase)
   
  if i create model like UserData , then we can access it using --> 
  prisma.userData (camelCase) 
*/

model Blog {
  id        String   @id @default(uuid())
  title     String
  content   String
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}